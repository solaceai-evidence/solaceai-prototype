{
  "logs": {
    "log_dir": "logs",
    "log_level": "DEBUG",
    "llm_cache_dir": "llm_cache",
    "event_trace_loc": "scholarqa_traces",
    "tracing_mode": "local"
  },
  "run_config": {
    "retrieval_service": "public_api",
    "retriever_args": {
      "n_retrieval": 256,
      "n_keyword_srch": 20
    },
    "reranker_service": "modal",
    "reranker_args": {
      "app_name": "ai2-scholar-qa",
      "api_name": "inference_api",
      "batch_size": 256,
      "gen_options": {}

    },
    "paper_finder_args": {
      "n_rerank": 50,
      "context_threshold": 0.0
    },
    "pipeline_args": {
      "validate": false,
      "llm": "anthropic/claude-sonnet-4-20250514",
      "fallback_llm": "openai/gpt-4.1",
      "decomposer_llm": "anthropic/claude-sonnet-4-20250514"
    }
  }
}
